%section.profile
  %div
    %img(alt='')
  %div
    %h1= @child.name
    %p
      #{@child.gender ? 'Né' : 'Née'} le #{@child.born_on},
      #{@child.age_in_months} mois
      %br/
      Village: #{@child.village.try(:name) || '-'}
  %div
    %h2 Dernières mesures
    - if @child.last_visit
      = partial 'measurements', locals: { diagnostic: @child.last_visit }
    - else
      %p Never measured.

- for diag in @child.diagnostics.order('id DESC').limit(5) do
  %section.consultation
    %h2
      Consultation du #{diag.done_on}
      %span.by par #{diag.author.name}
    %table
      %tr
        %th(scope="row") Date de consulation
        %td= diag.done_on
      %tr
        %th(scope="row") Méthode de diagnostic
        %td= diag.type_name
    = partial 'measurements', locals: { diagnostic: diag }

%nav
  %p.hint Le patient se présente à nouveau au dispensaire ?
  = link_to 'Nouvelle consulation', new_child_diagnostic_path(@child)
