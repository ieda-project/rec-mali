.profile-child
  #mugshot.photo{:"data-field" => 'child[photo]', :"data-action" => child_path(@child)}
    %img{alt: '', src: @child.photo.url(:thumbnail)}
  %section
    .editable{'data-edit-href' => edit_child_path(@child)}
      = partial 'children/'+(show? ? 'show' : 'edit'), locals: { child: @child }
    .measurements
      %h2 Derni√®res mesures
      - if @child.last_visit
        = partial 'children/measurements', locals: { diagnostic: @child.last_visit }
      - else
        %p Never measured.
    .ratios
      %ul
        %li
          %span= "Poids / Age"
          %strong
            = (@child.last_visit.weight / Index.weight_age.gender(@child.gender).near(@child.months).y * 100).round(0)
            = '%'
        %li.alert
          %span= "Loremipsum/lorem"
          %strong 95%
        %li
          %span= "Loremipsum/lorem"
          %strong 95%
    .vaccinations
      %h3 Vaccinations :
      %ul
        - Child::VACCINATIONS.each do |k,n|
          - if @child.send(k)
            %li.yes= n
          - else
            %li.no= n
