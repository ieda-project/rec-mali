%p.name
  %strong Nom :
  = form.text_field :name, 'data-label' => 'Nom', size: 30
%p
  %strong Sexe :
  = form.select :gender, [ %w(Masculin 1), %w(Féminin 0) ], selected: (form.object.gender ? '1' : '0')
  %br/
  %strong
    %span.nee= form.object.gender ? 'Né' : 'Née'
    le :
  = form.date_select(:born_on, :start_year => Date.today.year, :end_year => Date.today.year - 18)
  %br/
  %strong Village :
  = form.select :village_id, Village.to_select
