%span.name= child.sortable_name
%p
  %strong Identifiant :
  %span.identifier= child.identifier
  %br/
  - if child.mother.present?
    %strong Nom de la mère :
    = child.mother
    %br/

  %strong #{child.gender ? 'Né' : 'Née'} le :
  %span.age{'data-age' => child.age, 'data-months' => child.months, 'data-days' => child.days}
    #{l(child.born_on, :format => :long)}, #{months_to_text child.months}

  %br/
  %strong Village :
  = village child
  - if child.last_visit
    %br/
    %strong Dernière distance :
    = child.last_visit.distance_name
- if Csps.point?
  %button.edit(type="button") Modifier
