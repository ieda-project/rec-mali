%table
  %tbody
    %tr
      %th(scope='row') Taille
      %td #{diagnostic.height.round(1)} cm
      %th(scope='row') Temp.
      %td #{diagnostic.temperature.round(1)} °C
    %tr
      %th(scope='row') Poids
      %td #{diagnostic.weight.round(2)} kg
      - if diagnostic.months > 6
        %th(scope='row') Périm. Brac.
        %td{ class: class_for_mac(diagnostic.mac) } #{diagnostic.mac} mm
