- form_for @child do |form|
  %section.profile
    %div#mugshot.photo{'data-field' => 'child[photo]', 'data-method' => 'post', 'data-action' => temp_children_path}
      %img{alt: '', src: @child.photo.url(:thumbnail)}
    %div= partial 'edit_fields', locals: { form: form }
    - form.fields_for :diagnostic, @diagnostic do |fields|
      %div= partial 'diagnostics/edit_measurements', locals: { form: fields }
  %section
    - form.fields_for :diagnostic, @diagnostic do |fields|
      = partial 'diagnostics/edit_signs', locals: { form: fields }
  %nav
    %button(type="submit") Terminer la consultation
