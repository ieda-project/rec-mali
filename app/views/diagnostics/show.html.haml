= partial 'children/profile'
%section.consultation
  = partial 'header', locals: { diagnostic: @diagnostic }

- unless @diagnostic.classifications.any?
  %nav
    %form{method: 'post', action: calculations_child_diagnostic_path(@child, @diagnostic)}
      %button(type="submit") Run classifications

- for i in Illness.order(:sequence) do
  %section.consultation
    %h2= i.name
    %table
      - for sa in @diagnostic.sign_answers.for(i) do
        %tr
          %th(scope="row")= sa.sign.question
          %td= sa.value
    - cs = @diagnostic.classifications.for(i)
    - if cs.any?
      %ul.classification
        - for c in cs do
          %li= c.name
