!!! XML
!!! 5
%html
  %head
    %title CSPS
    = stylesheet_link_tag 'screen', 'forms', media: 'screen'
    = javascript_include_tag 'mootools', 'application'
    = yield :head
  %body
    %header
      = yield :header
      %ul#breadcrumbs
        %li= link_to "Index", "#"
        %li= link_to "Page 2", "#"
        %li= link_to "Page 3", "#"
        %li Page en cours
      -#- if back?
        %nav#prev= link_to back_title, back_url
      = form_tag session_path, method: 'delete' do
        Agent:
        %strong= current_user.name
        |
        - if Csps.site
          CSPS:
          %strong #{Csps.site}#{Csps.point? ? '*' : ''}
        - else
          Aucun CSPS
        %button.confirm(type="submit" data-confirm="Etes vous sûr de vouloir vous déconnecter ?") Logout

    = yield
